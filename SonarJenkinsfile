pipeline {
    agent any
parameters {
    
 
        choice(name: 'BRANCH', choices: ['main', 'dev'], description: 'Choose branch')
 
    
    }
    stages {

        stage ("Code pull"){
            steps{
                checkout scm
                echo "${WORKSPACE}"
            }
        }

        stage('Build environment') {
            steps {
                echo "Building virtualenv"
                sh  '''
                      pip3 install -r requirements.txt
                    '''
            }
        }
        stage('SonarQube analysis') {
        steps{
               withSonarQubeEnv('test-sonar-server') { // If you have configured more than one global server connection, you can specify its name
              sh "/Users/jalajsahni/Downloads/sonar-scanner-4.8.0.2856-macosx/bin/sonar-scanner -Dproject.settings=/Users/jalajsahni/.jenkins/workspace/Sonarscan/SonarJenkinsfile-project.properties"
    }
 
    }
  }
      
        }
    }
